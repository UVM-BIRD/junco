!!! 5
%html
  %head
    %title Junco
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    #header
      #logo= link_to 'Junco', root_url, class: 'plain'
      #search= render 'search/form'

    #content
      - if flash[:error]
        #error= flash[:error]

      - if flash[:alert]
        #alert= flash[:alert]

      - if flash[:notice]
        #notice= flash[:notice]

      = yield

    #footer Junco is Copyright &copy; 2014 The University of Vermont.  All Rights Reserved.